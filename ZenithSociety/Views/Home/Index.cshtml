@model IEnumerable<ZenithSociety.Models.Event>

@{
    ViewBag.Title = "ZenithSociety";
}
<h3 class="text-center col-sm-12">ZenithSociety Event Schedule</h3>
<hr />

<table id="eventsOfWeek" class="table text-center">
        @{DateTime date = DateTime.MinValue; }
        @foreach (var item in Model)
         {
            if (date.Date.CompareTo(item.EventFromDate.Date) != 0)
            {
                date = item.EventFromDate;
                 <tr style="background-color:#e3f2fd">
                    <th class="text-center"colspan="2">@Html.ValueFor(modelItem => item.EventFromDate, "{0:D}")</th>
                 </tr>
            }
            <tr>
                <td >
                    @Html.ValueFor(modelItem => item.EventFromDate, "{0:t}") - @Html.ValueFor(modelItem => item.EventToDate, "{0:t}")           
                </td>
                <td >
                    @Html.ValueFor(modelItem => item.ActivityCategory.ActivityDescription)
                </td>
            </tr>
         }
</table>